<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/incoming_call_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context=".CallingActivity.IncomingCallActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/call_type_caller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:text="INCOMING CALL FROM" />

            <TextView
                android:id="@+id/name_caller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                tools:text="Vikanshu Joshi" />

            <TextView
                android:id="@+id/number_caller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/amaranth"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:text="+91123456789" />

        </LinearLayout>

        <com.github.florent37.shapeofview.shapes.CircleView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="50dp"
            android:layout_weight="0.4">

            <ImageView
                android:id="@+id/image_caller"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default_user" />

        </com.github.florent37.shapeofview.shapes.CircleView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/reject_caller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/reject_round_button"
                android:padding="20dp"
                android:scaleType="center"
                android:src="@drawable/icon_reject_call"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/accept_caller"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/accept_caller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/calling_round_button"
                android:padding="20dp"
                android:scaleType="center"
                android:src="@drawable/icon_accept_call"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/reject_caller"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>



</LinearLayout>